<h4>Orders</h4>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Number of products</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) { 
        <tr>
            <td>@item.User.email</td>
            <td>@item.productInOrders.Count</td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Action
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Order" asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                        <li><a class="dropdown-item" asp-controller="Order" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></li>
                    </ul>
                </div>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        ...
    </tfoot>
</table>