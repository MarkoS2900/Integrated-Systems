@model Cinema.Domain.DTO.AddToCartDTO

@{
    ViewData["Title"] = "AddToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Add product to cart</h3>

<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddProductToCart">
            <input type="hidden" asp-for="productId" />
            <div class="form-group">
                <label asp-for="product.productName"></label>
                <input disabled asp-for="product.productName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="quantity"></label>
                <input type="number" asp-for="quantity" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>